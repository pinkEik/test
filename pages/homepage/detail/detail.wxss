.hidden{
    display:none;
    flex: 1;
}
.comment_list{
  display: flex;
  flex-direction: row;
}
.comm_info {
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}

.image_item{
  width: 30px;
  height: 30px;
}

.comm_info_title{
 font-family: extra-expanded;
 font-size: 15px;

}

.tab_info{
  /* margin: 10px; */
  /* padding: 10px; */
  margin-right: 10px;
}

.addcomment {
position: fixed;
bottom: 10px;
width: 100%;
background: #fff;

}

/* 搜索按钮样式 */
.page_row{
  margin-top:10px; 
  display: flex;
  flex-direction: row
}

.search{
  width: 80%;
}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 25rpx;
  margin-left: 20rpx;
}
.search_arr input{
  margin-left: 30rpx;
  height: 60rpx;
  border-radius: 5px;
}
.sousuo {
  margin-left: 15rpx;
  width: 15%; 
  line-height: 100%;
  text-align: center;
    display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}





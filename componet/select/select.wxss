.com-selectBox{
  padding-top: 10px;
    width: auto;
}
.com-sContent{
    font-size: 16px;
    position: relative;
    height: 30px;
    line-height: 30px;
    width: auto;
     display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;

}
.com-sImg{
    position: relative;
    right: 0px;
    top: 11px;
    width: 26px;
    height: 16px;
    transition: all .3s ease;
}
.com-sTxt{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding:0 5rpx 0 15rpx;
    font-size: 14px;
    color: #eee;

}
.com-sList{
    background: white;
    width: inherit;
    margin-left: 10px;
    border-top: none;
    box-sizing: border-box;
    z-index: 3;
    max-height: 120px;
    overflow: auto;
}
.com-sItem{
    height: 30px;
    line-height: 30px;
    border-top: 1px solid #e2e2e2;
    padding: 0 6px;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 14px;
}
.com-sItem:first-child{
    border-top: none;
}